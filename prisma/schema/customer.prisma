model Customer {
  id        BigInt   @id @default(autoincrement())
  name      String
  phone     String?  @unique
  email     String?  @unique
  address   String?
  favorite  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  sales         Sales[]
  purchaseStats CustomerPurchase[]
  invoices      Invoice[]          @relation("CustomerInvoices")

  @@map("Customers")
}
