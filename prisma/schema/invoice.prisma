model Invoice {
    id            BigInt   @id @default(autoincrement())
    invoiceNumber String   @unique
    shopId        BigInt
    customerId    BigInt?
    sellerId      BigInt
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
    totalPrice    Float
    discount      Float? // optional total invoice discount
    vatPercent    Float? // optional VAT %
    notes         String? // memo or extra info
    paymentStatus String? // e.g., "paid", "unpaid", "partial"
    paymentMethod String? // e.g., "cash", "card", "bank transfer"
    dueDate      DateTime? // optional due date for payment
    paymentDate  DateTime? // optional date when payment was made
    paymentRef   String? // optional reference number for payment
    paymentNotes String? // optional notes about the payment

    // Relations
    shop     Dokaan    @relation(fields: [shopId], references: [id], onDelete: Cascade)
    customer Customer? @relation("CustomerInvoices", fields: [customerId], references: [id])
    seller   User      @relation("UserInvoices", fields: [sellerId], references: [id])
    sales    Sales[]   @relation("InvoiceSales")

    @@map("Invoices")
}
