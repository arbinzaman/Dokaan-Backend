model Sales {
  id             BigInt   @id @default(autoincrement())
  branch         String?
  quantity       Int
  totalPrice     Float
  soldAt         DateTime @default(now())
  code           String
  batchNo        String?
  description    String?
  discount       Float?
  includeVAT     Boolean?
  itemCategory   String?
  itemUnit       String?
  mrp            Float?
  name           String
  productId      BigInt   @map("product_id")
  purchasePrice  Float
  salesPrice     Float
  sellerId       BigInt   @map("seller_id")
  serialNoOrIMEI String?
  shopId         BigInt   @map("shop_id")
  size           String?
  wholesalePrice Float?
  product        Product  @relation(fields: [productId], references: [id])
  seller         User     @relation("UserSales", fields: [sellerId], references: [id])
  shop           Dokaan   @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@map("Sales")
}
