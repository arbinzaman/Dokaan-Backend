model Sales {
  id         BigInt   @id @default(autoincrement())
  productId  BigInt   @map("product_id")
  code       String   @unique
  sellerId   BigInt   @map("seller_id")
  shopId     BigInt   @map("shop_id")
  branch     String?
  quantity   Int
  totalPrice Float
  soldAt     DateTime @default(now())

  // âœ… Proper Foreign Key Relations
  product    Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
  seller     User     @relation("UserSales", fields: [sellerId], references: [id], onDelete: Restrict)
  shop       Dokaan   @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@map("Sales")
}
