model Sales {
  id             BigInt   @id @default(autoincrement())
  quantity       Int
  totalPrice     Float
  soldAt         DateTime @default(now())
  code           String
  batchNo        String?
  description    String?
  discount       Float?
  includeVAT     Boolean?
  itemCategory   String?
  itemUnit       String?
  mrp            Float?
  name           String
  purchasePrice  Float
  salesPrice     Float
  serialNoOrIMEI String?
  size           String?
  wholesalePrice Float?
  branch         String?

  // Foreign Keys
  invoiceId  BigInt? // relation to Invoice
  productId  BigInt  @map("product_id")
  sellerId   BigInt? @map("seller_id")
  shopId     BigInt  @map("shop_id")
  customerId BigInt? @map("customer_id")

  // âœ… Relations (fully defined with names matching Invoice)
  invoice  Invoice?  @relation("InvoiceSales", fields: [invoiceId], references: [id])
  product  Product   @relation(fields: [productId], references: [id])
  seller   User?     @relation("UserSales", fields: [sellerId], references: [id])
  shop     Dokaan    @relation(fields: [shopId], references: [id], onDelete: Cascade)
  customer Customer? @relation(fields: [customerId], references: [id])

  @@map("Sales")
}
